<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Partner Form -->
        <record id="view_partner_form_inherit_legal" model="ir.ui.view">
            <field name="name">res.partner.form.legal</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Legal Information">
                        <group>
                            <field name="is_lawyer"/>
                            <field name="is_client"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
