<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Security Category for the Legal App -->
        <record id="module_category_legal_management" model="ir.module.category">
            <field name="name">Legal Management</field>
            <field name="description">User groups for Legal Case Management</field>
            <field name="sequence">20</field>
        </record>

        <!-- Legal User Group -->
        <record id="group_legal_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_legal_management"/>
        </record>

        <!-- Legal Manager Group (inherits from User) -->
        <record id="group_legal_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_legal_management"/>
            <field name="implied_ids" eval="[(4, ref('group_legal_user'))]"/>
        </record>

    </data>
</odoo>