<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_legal" model="ir.module.category">
            <field name="name">Legal</field>
            <field name="description">User access levels for Legal Case Management</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_legal_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="legal_case_management.module_category_legal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_legal_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="legal_case_management.module_category_legal"/>
            <field name="implied_ids" eval="[(4, ref('legal_case_management.group_legal_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="legal_case_user_rule" model="ir.rule">
            <field name="name">Legal Case: User can only see own or followed cases</field>
            <field name="model_id" ref="model_legal_case"/>
            <field name="groups" eval="[(4, ref('legal_case_management.group_legal_user'))]"/>
            <field name="domain_force">['|', ('responsible_lawyer_id', '=', user.partner_id.id), ('message_follower_ids', 'in', [user.partner_id.id])]</field>
        </record>

    </data>
</odoo>